<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:padding="20dp"
    tools:context="comprarvoz.MainComprarVoz">

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="¡Bienvenido! Diga su Tienda:"
        android:textColor="#303F9F"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_stores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_title"
        android:background="#E8EAF6"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opciones (Diga una):"
            android:textColor="#303F9F"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Tiendas disponibles por voz -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="• Mercadona"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• McDonald's"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Taco Bell"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_stores"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="#E0E0E0"
        android:padding="10dp"
        android:text="Estado: Esperando..."
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_status"
        android:layout_marginTop="10dp"
        android:background="#6EC0DE"
        android:padding="15dp"
        android:text="Resultado: Ninguno"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_result"
        android:layout_marginTop="30dp"
        android:text="Escuchando cada 7 segundos para la selección de tienda."
        android:textAlignment="center"
        android:textSize="16sp" />

</RelativeLayout>