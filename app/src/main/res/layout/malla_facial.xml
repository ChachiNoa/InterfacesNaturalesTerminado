<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".llamarmalla.MainMallaFacial">

    <!-- Camera Preview View (Full Screen Background) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- NOSE POINTER (Small Red Dot, initially hidden) -->
    <View
        android:id="@+id/nosePointer"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/rounded_red_dot"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:translationZ="10dp"
        android:outlineProvider="background"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <!-- The Grid Overlay Card (Taller for 4 rows) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/grid_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintDimensionRatio="3:4"
        app:cardCornerRadius="16dp"
        android:alpha="0.85"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/statusText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed">

        <!-- 4x3 GridLayout -->
        <GridLayout
            android:id="@+id/number_grid_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="4">

            <!-- Row 1 -->
            <TextView
                android:id="@+id/cell_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/cell_1"
                android:textSize="50sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/cell_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/cell_2"
                android:textSize="50sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/cell_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/cell_3"
                android:textSize="50sp"
                android:textStyle="bold" />

            <!-- Row 2 -->
            <TextView
                android:id="@+id/cell_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/cell_4"
                android:textSize="50sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/cell_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/cell_5"
                android:textSize="50sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/cell_6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/cell_6"
                android:textSize="50sp"
                android:textStyle="bold" />

            <!-- Row 3 -->
            <TextView
                android:id="@+id/cell_7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/cell_7"
                android:textSize="50sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/cell_8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/cell_8"
                android:textSize="50sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/cell_9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/cell_9"
                android:textSize="50sp"
                android:textStyle="bold" />

            <!-- Row 4 -->
            <TextView
                android:id="@+id/cell_delete"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/cell_delete_text"
                android:textSize="30sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/cell_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/cell_0"
                android:textSize="50sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/cell_call"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/cell_call_text"
                android:textSize="30sp"
                android:textStyle="bold" />

        </GridLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Status Indicator -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/status_ready"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="#80000000"
        android:padding="4dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/grid_card"
        app:layout_constraintBottom_toTopOf="@+id/dialed_numbers_display"
        app:layout_constraintStart_toStartOf="@id/grid_card"
        app:layout_constraintEnd_toEndOf="@id/grid_card"
         />

    <!-- Display for the sequence of selected numbers (Now outside the card) -->
    <TextView
        android:id="@+id/dialed_numbers_display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:hint="@string/dialed_numbers_hint"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/grid_card"
        app:layout_constraintStart_toStartOf="@id/grid_card"
        app:layout_constraintTop_toBottomOf="@id/statusText" />
</androidx.constraintlayout.widget.ConstraintLayout>